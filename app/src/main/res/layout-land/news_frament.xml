<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="473dp"
        android:layout_height="wrap_content"
        android:id="@+id/titleTV"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <TextView
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:id="@+id/publishedAtTV"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/newsImageView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="24dp"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:layout_width="213dp"
        android:layout_height="137dp"
        app:srcCompat="@android:drawable/screen_background_light_transparent"
        android:id="@+id/newsImageView"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/titleTV"
        android:layout_marginStart="352dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="352dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.88" />

    <TextView
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:id="@+id/authorTV"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/newsImageView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toLeftOf="@+id/publishedAtTV"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.95" />

    <TextView
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionTV"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/titleTV"
        app:layout_constraintRight_toLeftOf="@+id/newsImageView"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:id="@+id/articalNumTV"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="@+id/descriptionTV"
        app:layout_constraintVertical_bias="0.93" />
</android.support.constraint.ConstraintLayout>