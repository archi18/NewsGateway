<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:id="@+id/titleTV"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.25"
        android:textStyle="normal|bold"
        android:textSize="16sp" />

    <TextView
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:id="@+id/publishedAtTV"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/titleTV"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp" />

    <ImageView
        android:layout_width="213dp"
        android:layout_height="137dp"
        app:srcCompat="@android:drawable/screen_background_light_transparent"
        android:id="@+id/newsImageView"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/titleTV"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toRightOf="@+id/publishedAtTV"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <TextView
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:id="@+id/authorTV"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        app:layout_constraintRight_toLeftOf="@+id/newsImageView"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.03"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/publishedAtTV" />

    <TextView
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionTV"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/newsImageView"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:id="@+id/articalNumTV"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTV"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.75"
        android:textAlignment="center"
        android:textStyle="normal|bold" />
</android.support.constraint.ConstraintLayout>